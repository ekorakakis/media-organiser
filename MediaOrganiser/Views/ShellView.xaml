<Window x:Class="MediaOrganiser.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:local="clr-namespace:MediaOrganiser.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}" 
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="ShellView" Height="750" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.Row="0" Grid.ColumnSpan="2" Padding="32" Margin="16" Width="auto">
            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}">Media Organiser</TextBlock>
        </materialDesign:Card>
        <TextBlock Grid.Row="1" Grid.Column="0" Padding="32 0 32 0" Margin="16" Height="81" 
                   Style="{DynamicResource MaterialDesignSubheadingTextBlock}" x:Name="SelectedPath" 
                   Text="This is where the default path will be displayed"
                   TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left" />
        <Button Grid.Row="1" Grid.Column="1" x:Name="Browse" Content="Browse" 
                Padding="32" Margin="16" HorizontalAlignment="Right" VerticalAlignment="Top" Height="81"
                cal:Message.Attach="[Event Click] = [Action Browse]" />
        <Button Grid.Row="2" Grid.ColumnSpan="2" x:Name="LoadFiles" Content="Load Files" 
                Padding="32" Margin="16" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="81"
                cal:Message.Attach="[Event Click] = [Action LoadFiles]" />
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Padding="32 0 32 0" Margin="16" Height="81" 
                   Style="{DynamicResource MaterialDesignSubheadingTextBlock}" x:Name="Summary" 
                   Text="0 files found"
                   TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left" />
        <!--<TextBlock Grid.Row="4" Grid.ColumnSpan="2" Padding="32 0 32 0" Margin="16" Height="81" 
                   Style="{DynamicResource MaterialDesignSubheadingTextBlock}" x:Name="CurrentProgress" 
                   Text="Progress"
                   TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left" />-->
        <ProgressBar Grid.Row="4" Grid.ColumnSpan="2" x:Name="CurrentProgress" 
                     Padding="32 0 32 0" Margin="32 0 32 0"
                     Minimum="0" Maximum="100" IsIndeterminate="False" />
        <DataGrid Grid.Row="5" Grid.ColumnSpan="2" Padding="32 0 32 0" 
                  ItemsSource="{Binding Media}" />
    </Grid>
</Window>
